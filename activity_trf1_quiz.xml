<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trf1_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bakgd"
    tools:context="com.ict.acer.ictquiz.Trf1QuizActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/score"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_height="48dp">
        <LinearLayout
            android:background="@drawable/life"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="45dp">
        <TextView
            android:layout_marginLeft="45dp"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:textSize="25sp"
            android:text="3"
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/times"
            android:id="@+id/s1"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp">
            <TextView
                android:fontFamily="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:id="@+id/timer"
                android:textSize="25sp"
                android:text="00"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/win"
            android:orientation="horizontal"
            android:id="@+id/s2"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp">
        <TextView
            android:textColor="#000"
            android:textSize="25sp"
            android:id="@+id/points"
            android:fontFamily="monospace"
            android:layout_marginLeft="40dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">
    </RelativeLayout>

    <ImageView
        android:scaleType="fitCenter"
        android:src="@drawable/ram"
        android:id="@+id/laptop1"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_below="@+id/score"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="1dp"/>


    <TextView
        android:text="Computer"
        android:background="@drawable/text1"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/question"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="170dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout9">
        <Button
            android:fontFamily="monospace"
            android:text="True"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/ripple2_effect"
            android:textColor="#fff"
            android:id="@+id/trueButton"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_weight="0.65" />
        <Button
            android:background="@drawable/ripple_effect"
            android:text="or"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:fontFamily="monospace"
            android:text="False"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/ripple5_effect"
            android:textColor="#fff"
            android:id="@+id/ButtonFalse"
            android:layout_weight="0.70"
            android:layout_width="90dp"
            android:layout_height="60dp"/>


    </LinearLayout>
</LinearLayout>
